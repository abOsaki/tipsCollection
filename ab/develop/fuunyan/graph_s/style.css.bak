body {}

a:hover {
    left: 1px;
    position: relative;
    top: 1px
}

#container {
    position: absolute;
    margin: auto;
    top: 0px;
    right: 0px;
    left: 0px;
    width: 100%;
    height: 100%;
    background-image: url(../common/images/bg_sky.jpg);
    background-position: left bottom;
    background-repeat: repeat-x;
    background-color: #8fcbff;
}

#container_kiroku {
    width: 1000px;
    margin: 0 auto;
    background-image: url(../common/images/binder.png);
    background-repeat: no-repeat;
    background-position: 0px 40px;
}

#content {
    min-height: 700px;
    position: relative;
}

#box_graph {
    width: 900px;
    height: 400px;
    position: absolute;
    top: 100px;
    font-family: "ＭＳ ゴシック", "MS Gothic", "Osaka－等幅", Osaka-mono, monospace;
    font-size: 14px;
    margin: 50px 50px 0 50px;
    overflow-x: auto;
    overflow-y: hidden;
}

#img_tsugie {
    position: absolute;
    left: 717px;
    top: 622px;
}

table.kiroku {
    table-layout: fixed;
    background-color: white;
    text-align: center;
}

#box_graph table,
#box_graph table td,
#box_graph table th {
    border-collapse: collapse;
    border: solid 1px black;
}

#box_graph table td {
    width: 70px;
    height: 60px;
}

#box_graph table td:nth-child(1),
#box_graph table th:nth-child(1) {
    width: 176px !important;
}

.stamp_ohthodox {
    background-position: center center;
    background-image: url(../common/images/okiru_2.png);
    background-size: 100% auto;
    background-repeat: no-repeat;
}

.stamp_best {
    background-position: center center;
    background-image: url(../common/images/okiru_1.png);
    background-size: 100% auto;
    background-repeat: no-repeat;
}

table.scroll {
    /* width: 100%; */
    /* Optional */
    /* border-collapse: collapse; */
    border-spacing: 0;
    /*    border: 2px solid black;*/
}

table.scroll tbody,
table.scroll thead {
    display: block;
}

table.scroll thead {
    background-color: #f5d7bc;
}

thead tr th {
    height: 30px;
    line-height: 30px;
    /* text-align: left; */
}

table.scroll tbody {
    overflow-y: auto;
    overflow-x: hidden;
}

.orange {
    background-color: orange;
}

.stamp_coin {
    background-position: center center;
    background-image: url(../common/images/stamp_coin.png);
    background-size: 100% auto;
    background-repeat: no-repeat;
}

.fuunyan {
    display: none;
    /*追記 20160324 非表示へ*/
    position: absolute;
    top: 495px;
    left: 805px;
}

#box_graph table td:nth-child(n+2) {
    width: 70px !important;
}

.kiroku.scroll {
    width: 1180px !important;
}

#box_graph table thead td:nth-child(1) {
    width: 181px !important;
}