/* 初期化 */

html,
body,
div,
span,
caption,
table,
thead,
tbody,
tfoot,
tr,
th,
td,
dl,
dt,
dd,
ol,
ul,
li,
p,
a,
img,
applet,
object,
iframe,
blockquote,
pre,
abbr,
acronym,
address,
big,
cite,
code,
del,
dfn,
em,
ins,
kbd,
q,
s,
samp,
small,
strike,
strong,
sub,
sup,
tt,
var,
b,
u,
i,
center,
fieldset,
form,
label,
legend,
h1,
h2,
h3,
h4,
h5,
h6 {
    margin: 0;
    padding: 0;
    top: 0;
    left: 0;
    border: 0;
    box-sizing: border-box;
}


/* HTML5 */

article,
aside,
details,
figcaption,
figure,
footer,
header,
hgroup,
menu,
nav,
section {
    display: block;
    margin: 0;
    padding: 0;
    top: 0;
    left: 0;
    border: 0;
    box-sizing: border-box;
}


/* 初期化(要素別) */

table {
    border-collapse: collapse;
    border-spacing: 0;
}

ol,
ul {
    list-style: none;
}

a {
    text-decoration: none;
}


/* 共通スタイル */

html {
    height: 100%;
    width: 100%;
    letter-spacing: 1px;
    font-family: 'ヒラギノ角ゴ Pro W3', 'Hiragino Kaku Gothic Pro', 'Meiryo UI', 'メイリオ', Verdana, 'ＭＳ Ｐゴシック', sans-serif;
    font-size: 11pt;
}

body {
    height: 100%;
    width: 100%;
}

#container {
    position: absolute;
    margin: auto;
    top: 0px;
    right: 0px;
    bottom: auto;
    left: 0px;
    width: 97%;
    height: 100%;
    width: 1340px;
    min-height: 400px;
}

#contents {
    /* コンテンツ */
    position: relative;
    height: 95%
}

#header {
    /* ヘッダー */
    position: relative;
    height: 55px;
    padding: 10px 15px;
    font-size: 15pt;
    font-weight: bold;
    color: #fafafa;
}

#footer {
    /* フッター */
    position: absolute;
    top: auto;
    right: 1px;
    bottom: 1px;
    left: auto;
    width: auto;
    color: #e6e6e6;
    font-weight: bold;
    text-align: center;
}


/* メニュー、戻る、ログアウトのボタン */

#headImg {
    position: absolute;
    margin: auto;
    top: 10px;
    right: 10px;
    bottom: auto;
    left: auto;
    display: inline-block;
    height: 24px;
    font-size: 0;
}

#headImg img {
    margin: 0 1px;
}

img[data-target],
img[onclick],
button {
    cursor: pointer;
}


/* アラート */

#alertWindow {
    position: absolute;
    margin: auto;
    width: auto;
    height: auto;
    background-color: #ffffff;
    line-height: 20pt;
    text-align: center;
}

#alertText {
    padding: 15px 20px;
}

#alertBtn {
    position: relative;
    width: 100%;
    height: 50px;
    border-top: solid 1px #bcbaba;
    background-color: #e1f0dc;
    text-align: center;
}

#alertBtn img {
    cursor: pointer;
    margin: 10px 3px;
}

#alert-overlay {
    position: fixed;
    display: none;
    z-index: 999;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.75);
}


/* モーダルコンテンツ */

.modal-content {
    position: fixed;
    display: none;
    z-index: 9;
    width: auto;
    height: auto;
    margin: 0;
    padding: 15px 20px;
    border: 6px solid #04AD57;
    background: #fff;
    min-width: 320px;
    min-height: 240px;
}

.modal-content hr {
    margin-bottom: 10px;
}

.modal-overlay {
    z-index: 8;
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 120%;
    background-color: rgba(0, 0, 0, 0.75);
}

.modalArea {
    position: absolute;
    margin: auto;
    top: 0px;
    right: 0px;
    bottom: 50px;
    left: 0px;
    padding: 8px 5px;
    text-align: center;
}

.modalTitle {
    margin: 10px auto;
    text-align: center;
    font-size: 18pt;
    font-weight: bold;
    letter-spacing: 5px;
}

.modalButton {
    position: absolute;
    margin: auto;
    top: auto;
    right: 0;
    bottom: 0;
    left: 0;
    height: 50px;
    width: 95%;
    text-align: center;
}


/* 読み込み中画面 */

#loaderBg {
    position: absolute;
    display: none;
    height: 100%;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 100;
}

#loader {
    position: absolute;
    margin: auto;
    top: 0px;
    right: 0px;
    bottom: 0px;
    left: 0px;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    border: 8px solid #fff;
    border-right-color: transparent;
}

#loader {
    /* 1秒毎に回転するアニメーション */
    animation: spin 1s linear infinite;
}

@keyframes spin {
    /* キーフレームアニメーション */
    /*0% の時は20％の透明度 */
    0% {
        transform: rotate(0deg);
        opacity: 0.2;
    }
    /*50% の時は透明度なし */
    50% {
        transform: rotate(180deg);
        opacity: 1.0;
    }
    /* 100%の時に20％の透明度に戻る */
    100% {
        transform: rotate(360deg);
        opacity: 0.2;
    }
}

