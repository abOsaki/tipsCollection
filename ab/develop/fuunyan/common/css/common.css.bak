/*Dialogスタイル追加*/

.ui-dialog {
    width: auto;
    height: auto;
    margin: 0;
    padding: 15px 20px;
    border: 6px solid #2bc9f8;
    background: #fff;
}

.ui-dialog-title {
    /*Dialogタイトル文字*/
    font-size: 28px;
    font-weight: bold;
    color: #2bc9f8;
    text-align: center;
}

.itemName {
    display: inline-block;
    width: 100px;
    line-height: 2.2em;
    font-weight: bold;
}

.itemInput {
    width: 120px;
	padding: 4px;
	border: 1px solid #ccc;
	background: none;
}

.ui-dialog-buttonset {
    width: 100%;
    text-align: center;
}
