<?php
require_once "../../../admin/php/dbConnect.php";

//保存
function questionSave($param) {
    $model = new dbConnect(ANAUME_TABLE);
    $pdo = $model -> connectInfo();

    $sql = "";
    $stmt = $pdo -> prepare($sql);

    $stmt -> execute(null);
    return $stmt -> fetchAll(PDO::FETCH_CLASS);
}

//開く
function questionOpen($param) {
    $model = new dbConnect(ANAUME_TABLE);
    $pdo = $model -> connectInfo();

    $sql = "";
    $stmt = $pdo -> prepare($sql);

    $stmt -> execute(null);
    return $stmt -> fetchAll(PDO::FETCH_CLASS);
}

//js側からのデータ
$data = file_get_contents("php://input");
$req = json_decode($data, true);

$res = "";
if ($req["command"] == "questionSave"){
    $res = questionSave($req["param"]);
} else if ($req["command"] == "questionOpen"){
    $res = questionOpen($req["param"]);
} else {
    $res = null;
}

//js側へ
echo json_encode($res, JSON_UNESCAPED_UNICODE);

?>